<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearcarviewalbum"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:src="@drawable/noanh"
        android:layout_gravity="center"
        android:id="@+id/imageviewallalbum"
        android:scaleType="fitXY"
        android:layout_width="200dp"
        android:layout_height="200dp"/>
    <TextView
        android:id="@+id/textviewtenallalbum"
        android:text="Ngay xuan long phung sum vay dai dai"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="200dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Noo Phuoc Thinh"
        android:textSize="15sp"
        android:maxWidth="200dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/casi"
        android:id="@+id/textviewtencasialbum"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>