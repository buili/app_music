<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.DanhSachCacPlayListActivity">
    <androidx.appcompat.widget.Toolbar
        app:title="Play lits"
        app:titleTextColor="@color/xemthem"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:id="@+id/toolbardanhsachplaylist"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycleviewdanhsachcacplaylist"
        android:layout_below="@+id/toolbardanhsachplaylist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>