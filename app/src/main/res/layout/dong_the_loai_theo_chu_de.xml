<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/framelayouttheloaitheochude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageviewtheloaitheochude"
                android:src="@drawable/noanh"
                android:scaleType="centerCrop"
                android:layout_width="180dp"
                android:layout_height="180dp"/>

        </FrameLayout>
        <TextView
            android:textSize="15sp"
            android:textColor="@color/black"
            android:text="Nhạc Việt hot trong tháng mười"
            android:maxWidth="200dp"
            android:lines="1"
            android:gravity="center"
            android:ellipsize="end"
            android:id="@+id/textviewtentheloaitheochude"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Various Artists"
            android:textSize="13sp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>